<!-- Doesn't matter if I'm using .id or _id we are just displaying it -->
<li id="post-<%=post.id%>">     
    <% if(locals.customer && locals.customer.id == post.customer.id){%>
    <a class="delete-post-button" href="/posts/destroy/<%= post.id %>">X</a>
    <%}%>
    <p>
        <%= post.customer.Name %><br>
        <%= post.content %>

    </p>
    <div class="post-comments">
        <% if(locals.customer){%>
        <form action="/comments/create" method="POST" class = "new-comment-form">
            <textarea name="content" cols="30" rows = "3" placeholder="Type your comment here..."></textarea>
            <input type="hidden" name="post" value="<%= post._id %>">
            <input type="submit" value="Comment">
        </form>
        <%}%>
        <div class="post-comments-list">
            <ul id = "post-comments-<%= post._id %>">
                <% for(comment of post.comments){%> 
                    
                    <%- include('_comments') -%>
                <% } %>
            </ul>
        </div>
    </div>

</li>
